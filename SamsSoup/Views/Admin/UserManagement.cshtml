@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@model IEnumerable<IdentityUser>

    <h2>User Management</h2>

@if (!Model.Any())
{
    <tr><td colspan="3" class="text-center">No User Accounts</td></tr>
}
else
{
    <table class="table table-bordered">
        <thead class="text-center">User Management</thead>
        <tr>
            <th>User Id</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
        @foreach(IdentityUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <form asp-action="DeleteUser" asp-route-userId="@user.Id" method="post">
                        <a class="btn btn-secondary btn-sm" asp-action="EditUser" asp-route-id="@user.Id">Edit</a>
                        <button type="submit" onclick="return confirm('Are you sure you want to delete the user?');" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </table>
}
<a class="btn btn-primary" asp-action="AddUser">Add new user</a>