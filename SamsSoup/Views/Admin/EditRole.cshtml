@model EditRoleViewModel

    <h2>Edit role</h2>

    <form asp-controller="Admin" asp-action="EditRole" method="post">
        <h4>Edit the role</h4>
        <hr />
        <div class="text-danger" asp-validation-summary="All"></div>

        <div class="form-group">
            <label asp-for="Id"></label>
            <input asp-for="Id" class="form-control" readonly="readonly" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="RoleName"></label>
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save role"/>
            <a asp-action="RoleManagement" class="btn btn-primary">Cancel</a>
        </div>
    </form>

    <h3>Users in Role</h3>
    <ul>
        @foreach (var user in Model.Users)
        {
            <li>@user</li>
        }

    </ul>

    <a asp-action="AddUserToRole" asp-route-roleId="@Model.Id" class="btn btn-primary">Add Users to Role</a>
    <a asp-action="DeleteUserFromRole" asp-route-roleId="@Model.Id" class="btn btn-primary">Delete Users From Role</a>