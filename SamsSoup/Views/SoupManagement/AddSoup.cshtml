@model SoupEditViewModel

<h2>Create a new Soup</h2>

<form asp-controller="SoupManagement" asp-action="AddSoup" method="post" role="form">
    <h4>Enter the Soup details below</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Soup.SoupName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Soup.SoupName" class="form-control" />
            <span asp-validation-for="Soup.SoupName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Soup.ShortDescription" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Soup.ShortDescription" class="form-control" />
            <span asp-validation-for="Soup.ShortDescription" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Soup.LongDescription" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Soup.LongDescription" class="form-control" />
            <span asp-validation-for="Soup.LongDescription" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Soup.Price" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Soup.Price" class="form-control" />
            <span asp-validation-for="Soup.Price" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Soup.IsSoupOfTheWeek" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Soup.IsSoupOfTheWeek" class="form-control" />
            <span asp-validation-for="Soup.IsSoupOfTheWeek" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Categories" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="Soup.CategoryId" class="form-control"
                    asp-items="Model.Categories"></select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Create Soup" />
        </div>
    </div>
</form>