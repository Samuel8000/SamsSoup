@model IList<string>

@if (Model.Count > 0)
{
    <form asp-action="QuickEdit" method="post">
        @for (var i = 0; i < Model.Count; i++)
        {
        <div class="form-group">
            <label>Soup name @(i + 1)</label>
            <input asp-for="@Model[i]" name="soups" id="soups" class="form-control"/>
        </div>
        }
        <samsbutton content="Update" button-style="primary"/>
    </form>
}
else
{
    <h2>No Soups in the system</h2>
}